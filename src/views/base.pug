doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | 클로닝
        link(rel="stylesheet" href="/static/css/styles.css")
        link(rel="stylesheet"href="https://fonts.googleapis.com/icon?family=Material+Icons")
    body 
        header
            nav 
                ul      
                    if loggedIn
                        li 
                            a(href="/users/logout") 로그아웃
                        li 
                            a(href="/users/edit") #{loggedInUser.name}의 프로필 수정
                    else
                        li 
                            a(href="/login") 로그인   
                        li 
                            a(href="/join") 회원가입                         
                    li 
                        a(href="/") 메인 화면으로
                    li
                        a(href="/search") 검색 

                ul 
                    if loggedIn
                        li 
                            a(href="/videos/upload") 영상 업로드 
                        li 
                            a(href=`/users/${loggedInUser._id}`) 내 프로필   
            h1=pageTitle
        main
            block content
    include partials/footer
    script(src="/static/js/main.js") 