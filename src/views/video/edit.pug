extends ../base

block content 
    h3  영상 업데이트
    form(method="POST") 
        input(type="text",placeholder="Video Title", value=video.title, required, name="title")
        input(type="text", placeholder="설명" , value=video.description,required, name="description")
        input(type="text", placeholder="해시태그를 쉼표로 구분해주세요.", value=video.hashtags.join() , name="hashtags")
        input(type="submit", value="저장하기")